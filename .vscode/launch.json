{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "LANDO XDebug",
      "type": "php",
      "request": "launch",
      "port": 9000,
      "log": true,
      "pathMappings": {
        "/app/": "${workspaceRoot}/"
      },
      "xdebugSettings": {
        "max_children": 300,
        "max_data": 512,
        "max_depth": 3
      }
    },
    {
      "name": "Listen for XDebug",
      "type": "php",
      "request": "launch",
      "port": 9000
    },
    {
      "name": "Launch currently open script",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "port": 9000
    }
  ]
}
